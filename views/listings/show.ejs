<% layout("/layouts/boilerplate") %>
<script>
const mapToken = "<%=process.env.MAP_TOKEN%>";

</script>



  <div class="row mt-3">
   <div class="col-8 offset-3">
  
    <h3><%= l.title %></h3>
</div>


    <div class="card col-6 offset-3 show-card listing-card" >
        <img src="<%= l.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <p>Owned by: <%= l.owner.username %></p>
            <%= l.description %> <br>
            &#8377;<%= l.price.toLocaleString("en-IN") %> <br>
            <%= l.location%> <br>
            <%=l.country %>
        
        
        </p>
        </div>
     
      </div>
    <br>

    <% if(currUser && l.owner._id.equals(currUser ._id)){ %>
<div class="btns" style="margin-top: 15px;">
 <a href="/listings/<%=l._id %>/edit" class="btn btn-dark offset-3  add-btn" style="height: 37.5px; width: 100px;">Update</a>
   
 <form method="POST" action="/listings/<%= l._id %>?_method=DELETE">
    <button class="btn btn-dark offset-4">Delete</button>
 </form>
</div>
<% } %>
</div>


<div class="col-8 offset-3 mb-3">

<% if(currUser){ %>
  <hr>
<h4>Leave a review</h4>
<form action="/listings/<%= l._id %>/reviews" method="POST" class="needs-validation" novalidate>
<!-- <div class="mb-3 mt-3">
  <label for="rating" class="form-label">Rating</label>
 <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range"/>
 
</div> -->


<div class="mt-3 mb-3">
  <label for="rating" class="form-label">Rating</label>
  <fieldset class="starability-slot">
      <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
          aria-label="No rating." />
      <input type="radio" id="first-rate1" name="review[rating]" value="1" />
      <label for="first-rate1" title="Terrible">1 star</label>
      <input type="radio" id="first-rate2" name="review[rating]" value="2" />
      <label for="first-rate2" title="Not good">2 stars</label>
      <input type="radio" id="first-rate3" name="review[rating]" value="3" />
      <label for="first-rate3" title="Average">3 stars</label>
      <input type="radio" id="first-rate4" name="review[rating]" value="4" />
      <label for="first-rate4" title="Very good">4 stars</label>
      <input type="radio" id="first-rate5" name="review[rating]" value="5" />
      <label for="first-rate5" title="Amazing">5 stars</label>
  </fieldset>
</div>


<div class="mt-3 mb-3">
  <label for="comment" class="form-label">Comment</label>
  <textarea name="review[comment]" id="comment" cols="30" rows="4" class="form-control"
      required></textarea>
  <div class="invalid-feedback">
      Please add some comments for reviews
  </div>
</div>
<button type="submit" class="btn btn-outline-dark mb-3">Submit</button>
</form>
<% } %>

<hr>

  
<% if(l.reviews.length>0){ %>
      <div class="row">
        <p><b>All reviews</b></p>
      <% for(review of l.reviews){ %>
          <div class="card col-5 ms-3 mb-3">
              <div class="card-body">
                  <h5 class="card-title">
                    @<%= review.author.username%>
                  </h5>
                  <p class="starability-result card-text" data-rating="<%= review.rating %>">
                  <p class="card-text">
                      <%= review.comment %>
               </p>   
  
              <form action="/listings/<%= l._id %>/reviews/<%= review._id %>?_method=DELETE"
                method="post" class="mb-3">
                <button type="submit" class="btn btn-dark">Delete</button>
            </form>

          </div>
          </div>
          <% } %>
        </div>
        <% } %>
      
  </div>
  
  <div class="col-8 offset-3 mb-3">
    <h3>Where you'll be</h3>
    <div id="map"></div>

</div>


<script src="/js/map.js"></script>